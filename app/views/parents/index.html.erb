<p id="notice"><%= notice %></p>
<div class="teacher-edit">
  <%= link_to 'Edit Your Profile', edit_teacher_path(session[:teacher_id]) %>
</div><br>

<h1 class="parent-table">Listing Parents</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Child name</th>
      <th>Teacher</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @parents.each do |parent| %>
      <% if parent.teacher_id == session[:teacher_id] %>
        <tr>
          <td><%= parent.name %></td>
          <td><%= parent.email %></td>
          <td><%= parent.child_name %></td>
          <td><%= parent.teacher_id %></td>
          <td colspan="3"></td>
          <td><%= link_to 'Edit', edit_parent_path(parent) %></td>
          <td><%= link_to 'Destroy', parent, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'New Parent', new_parent_path %>
