<!DOCTYPE html>
<html>
<head>
  <title>Teacherbook</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<% if session[:teacher_id] %>
  <div>Hello <%= Teacher.find_by_id(session[:teacher_id]).name %></div></br>
<% end %>
<%= link_to "Logout", sessions_logout_path if session[:teacher_id] %></br>
<%= yield %>

</body>
</html>
